{% extends "base.html.twig" %}

{% block title %}
	{{parent()}}| Épisodes
{% endblock %}

{% block body %}
	<div class="section-one-ep">
		<a class="btn btn-lg btn-light m-4" href="/program">Retour</a>
		<h1 class="p-4 text-center">{{'Épisode #' ~ episode.number ~ ' - ' ~ episode.title}}</h1>
		<div class="container">
			<div class="row">
				<div class="col mb-4">
					<div class="card">
						<div class="card-body">
							<h2 class="text-dark">{{program.title}}</h2>
							<h3 class="text-dark">{{'Saison #' ~ season.number}}</h3>
							<p class="text-dark">{{episode.synopsis}}</p>

							{% if app.user %}
								<form action="" method="post">
									<label for="author" class="form-label text-dark mt-3">Auteur :</label>
									<input type="text" id="author" name="_author" class="form-control form-control-lg mb-3">

									<label for="rate" class="form-label text-dark mt-3">Note :</label>
									<input type="number" id="rate" name="rate" class="form-control form-control-lg mb-3">

									<label for="comment" class="form-label text-dark">Commentaire :</label>
									<textarea type="text" id="comment" name="_comment" class="form-control form-control-lg"></textarea>

									<button type="submit" class="my-3 btn btn-lg btn-outline-secondary">Ajouter un commentaire</button>
								</form>
							{% else %}
								<p class="text-dark fw-bold">
									<a href="{{path('app_login')}}">Connecte-toi</a>
									pour ajouter un commentaire</p>
							{% endif %}
						</div>
					</div>
					<div class="card mt-4">
						<div class="card-body">
							<h2 class="text-dark">Commentaires :</h2>
							{# {% if comments %}
								<ul>
									<li class="text-dark">
										<h3>{{comment.author}}</h3>
										<p>{{comment.comment}}</p>
										<p>{{comment.rate}}</p>
									</li>
								</ul>
							{% else %}
								<p>Aucun commentaire pour le moment... Soit le premier !</p>
							{% endif %} #}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
