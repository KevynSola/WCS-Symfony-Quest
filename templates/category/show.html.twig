{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}|
	{{categoryName.name}}
{% endblock %}

{% block body %}
	<section class="section-program">
		<a class="btn btn-lg btn-light m-4" href="/category">Retour</a>
		<h1 class="p-4 text-center">{{categoryName.name}}</h1>
		<div class="container">
			<div class="row">
				{% for program in programs %}
					<div class="col-12 col-sm-4 col-md-3 g-4 mb-4">
						<div class="card card-program">
							<img src="{{program.poster}}" class="rounded-top img-card" alt="Image de la série">
							<div class="card-body">
								<h2 class="text-dark">{{program.title}}</h2>
								<p class="text-dark">{{program.synopsis}}</p>
							</div>
							<a class="btn btn-lg btn-outline-secondary" href="{{path('program_show', {"slug" : program.slug})}}">En savoir +</a>
						</div>
					</div>
				{% else %}
					<p>Aucune séries ajoutée</p>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
