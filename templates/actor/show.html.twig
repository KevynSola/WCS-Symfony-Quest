{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1 class="text-light">Actor</h1>

    <table class="table text-light">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img src="{{vich_uploader_asset(actor)}}" alt="{{actor.name}}"></td>
            </tr>
        </tbody>
    </table>

    <a class="text-light" href="{{ path('app_actor_index') }}">back to list</a>

    <a class="text-light" href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
