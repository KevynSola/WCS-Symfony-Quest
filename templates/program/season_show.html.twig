		<h1 class="p-4 text-center">{{season.number}}</h1>
		<div class="container">
			<div class="row">
				<div class="col mb-4">
					<div class="card">
						<img src="{{program.poster}}" class="rounded-top img-card-show" alt="Image de la sÃ©rie">
						<div class="card-body">
							<p class="text-dark">{{program.synopsis}}</p>
						</div>
						<div class="episode">
							<p>{# {{season.episode}} #}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
